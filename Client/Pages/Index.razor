@page "/"
@inject MudBlazor.ISnackbar snackBar


<MudCard Elevation="25">
    <MudCardHeader>
        <CardHeaderContent>
            
            <AuthorizeView>
                <Authorized>      
                    <MudText Typo="Typo.h6">Hello @context.User.Identity.Name</MudText>
                    <MudText Typo="Typo.h6">Your Personal Page</MudText>
                </Authorized>
                 <Authorizing>
                 <h1>Loading ...</h1>
                    </Authorizing>
                <NotAuthorized>
                    You are not authorized!
                </NotAuthorized>
            </AuthorizeView>

        </CardHeaderContent>
    </MudCardHeader>
</MudCard>
