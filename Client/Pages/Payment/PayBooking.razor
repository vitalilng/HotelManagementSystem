@page "/payment"
@inject ISnackbar snackbar


<MudPaper>
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h4">Payment page</MudText>
            </CardHeaderContent>
        </MudCardHeader>
    </MudCard>
    <MudCard Outlined="true">         
        <MudCardContent>
            <MudTextField Label="Card Number" @bind-Value="cardNumber"></MudTextField>
            <MudDatePicker Label="Expiration Date" Date="expirationDate"/>
            <MudTextField Label="CVV" @bind-Value ="cvv"/>
            <MudTextField Label="Card Holder Name" @bind-Value="cardHolderName"></MudTextField>
            <MudTextField Label="Email" @bind-Value="email"></MudTextField>
        </MudCardContent>
    </MudCard>
    <MudCardActions>
        <MudButton Class="py-5" ButtonType="ButtonType.Submit"
                   Size=Size.Large Variant="Variant.Filled" Color="Color.Tertiary" OnClick="() => Pay()">Pay</MudButton>
    </MudCardActions>
    

</MudPaper>
    





